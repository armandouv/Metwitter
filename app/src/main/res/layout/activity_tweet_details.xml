<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetDetailsActivity">

    <ImageView
        android:id="@+id/profile_image_details"
        android:layout_width="91dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/name_details"
        android:contentDescription="Profile photo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_details"
        android:layout_width="298dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="3dp"
        android:text="A tweet" />

    <TextView
        android:id="@+id/text_body_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="29dp"
        android:text="This is a great tweet." />

    <ImageView
        android:id="@+id/embedded_details"
        android:layout_width="380dp"
        android:layout_height="392dp"
        android:layout_below="@+id/text_body_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:contentDescription="Embedded image"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embedded_details"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="170dp"
        android:contentDescription="Created at"
        android:fontFamily="sans-serif-condensed"
        android:text="Wed Oct 10 2018 20:19:24" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_at"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="111dp"
        android:contentDescription="Timestamp"
        android:fontFamily="sans-serif-medium"
        android:text="9 Likes" />

    <TextView
        android:id="@+id/retweets"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_at"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="225dp"
        android:contentDescription="Timestamp"
        android:fontFamily="sans-serif-medium"
        android:text="8 Retweets" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_details"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/profile_image_details"
        android:text="TextView" />

</RelativeLayout>